    </logger>
    <!-- Loggers -->

    <!--Root logger打印所有日志，但不包含perf4j的信息。原因是在TimingLogger配置中设置了additivity为false-->
    <root>
        <level value="INFO"/>
        <appender-ref ref="console"/>
        <appender-ref ref="R"/>
    </root>
</log4j:configuration>